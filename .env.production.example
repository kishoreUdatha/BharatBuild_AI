# ============================================
# BharatBuild AI - Production Environment
# Beta Version Configuration
# ============================================
# IMPORTANT: Copy this file to .env.production and fill in all values
# NEVER commit .env.production to git!

# ==================== APPLICATION ====================
APP_NAME=BharatBuild AI
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_STRING_64_CHARS
API_VERSION=v1

# Your domain (without https://)
DOMAIN=your-domain.com
API_URL=https://your-domain.com
WS_URL=wss://your-domain.com

# ==================== DATABASE ====================
DB_USER=bharatbuild
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS
DB_NAME=bharatbuild_db
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ==================== REDIS ====================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_32_CHARS
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_CACHE_DB=1

# ==================== CELERY ====================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/2
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/3

# ==================== CLAUDE AI (Anthropic) ====================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-CHANGE_ME
CLAUDE_HAIKU_MODEL=claude-3-5-haiku-20241022
CLAUDE_SONNET_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ==================== STORAGE (MinIO/S3) ====================
USE_MINIO=True
MINIO_USER=CHANGE_ME_MINIO_USER
MINIO_PASSWORD=CHANGE_ME_MINIO_PASSWORD_32_CHARS
MINIO_ENDPOINT=minio:9000
S3_BUCKET_NAME=bharatbuild-projects
AWS_ACCESS_KEY_ID=${MINIO_USER}
AWS_SECRET_ACCESS_KEY=${MINIO_PASSWORD}
AWS_REGION=us-east-1

# ==================== AUTHENTICATION ====================
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_64_CHARS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== GOOGLE OAUTH ====================
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=CHANGE_ME.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=CHANGE_ME
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/callback/google

# ==================== RAZORPAY (Payment) ====================
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_CHANGE_ME
RAZORPAY_KEY_SECRET=CHANGE_ME
RAZORPAY_WEBHOOK_SECRET=CHANGE_ME

# ==================== EMAIL (SMTP) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@your-domain.com

# ==================== CORS ====================
CORS_ORIGINS=https://your-domain.com

# ==================== RATE LIMITING ====================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# ==================== FILE UPLOAD ====================
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,png,jpg,jpeg

# ==================== LOGGING ====================
LOG_LEVEL=WARNING
LOG_FILE=logs/app.log

# ==================== FRONTEND BUILD ARGS ====================
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
NEXT_PUBLIC_WS_URL=wss://your-domain.com/ws
