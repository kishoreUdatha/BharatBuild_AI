# BharatBuild AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=BharatBuild AI
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://bharatbuild:password@localhost:5432/bharatbuild_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_ECHO=false

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# ==========================================
# CELERY (Background Tasks)
# ==========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==========================================
# CLAUDE AI CONFIGURATION
# ==========================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_HAIKU_MODEL=claude-3-5-haiku-20241022
CLAUDE_SONNET_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ==========================================
# STORAGE CONFIGURATION
# ==========================================
# Storage mode: "local", "s3", or "minio"
STORAGE_MODE=local

# AWS S3 Configuration (for STORAGE_MODE=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=bharatbuild-projects

# MinIO Configuration (for STORAGE_MODE=minio)
MINIO_ENDPOINT=localhost:9000
USE_MINIO=true

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# GOOGLE OAUTH (Optional)
# ==========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google

# ==========================================
# RAZORPAY PAYMENT GATEWAY (Optional)
# ==========================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@bharatbuild.ai

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ==========================================
# CORS SETTINGS
# ==========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=["pdf", "doc", "docx", "txt", "png", "jpg", "jpeg"]

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==========================================
# NOTES
# ==========================================
# 1. Never commit this file to git with real credentials
# 2. For production, use strong random values for SECRET_KEY and JWT_SECRET_KEY
# 3. For S3 storage, create AWS account and S3 bucket first
# 4. For local development, STORAGE_MODE=local is recommended
# 5. See S3_STORAGE_GUIDE.md for detailed setup instructions
