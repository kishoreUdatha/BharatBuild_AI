# BharatBuild AI - Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local with real credentials to git

# ==========================================
# API CONFIGURATION
# ==========================================
# Backend API URL (without trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# App name displayed in UI
NEXT_PUBLIC_APP_NAME=BharatBuild AI

# Domain for share links and public URLs
NEXT_PUBLIC_APP_DOMAIN=bharatbuild.ai
NEXT_PUBLIC_SHARE_URL_BASE=https://bharatbuild.ai/share

# ==========================================
# NEXTAUTH CONFIGURATION
# ==========================================
# The base URL of your application
NEXTAUTH_URL=http://localhost:3000

# Secret for NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# ==========================================
# GOOGLE OAUTH (Optional)
# ==========================================
# Get these from Google Cloud Console
# See backend/.env.example for setup instructions
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# ==========================================
# GITHUB OAUTH (Optional)
# ==========================================
# Get these from GitHub Developer Settings
# See backend/.env.example for setup instructions
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# ==========================================
# API CLIENT CONFIGURATION
# ==========================================
# Request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Maximum retry attempts for failed requests
NEXT_PUBLIC_MAX_RETRIES=3

# Base delay for retry backoff in milliseconds
NEXT_PUBLIC_RETRY_DELAY_BASE=1000

# Maximum retry delay in milliseconds
NEXT_PUBLIC_MAX_RETRY_DELAY=30000

# ==========================================
# RECONNECTION SETTINGS
# ==========================================
# Maximum reconnection attempts
NEXT_PUBLIC_RECONNECTION_MAX_RETRIES=5

# Base delay for reconnection backoff in milliseconds
NEXT_PUBLIC_RECONNECTION_BASE_DELAY=1000

# Heartbeat interval in milliseconds
NEXT_PUBLIC_HEARTBEAT_INTERVAL=30000

# Health check interval in milliseconds
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000

# Health check timeout in milliseconds
NEXT_PUBLIC_HEALTH_CHECK_TIMEOUT=5000

# ==========================================
# TOKEN SYSTEM
# ==========================================
# Default token balance for demo/development
NEXT_PUBLIC_DEFAULT_TOKEN_BALANCE=10000

# Usage percentage threshold for warning (0-100)
NEXT_PUBLIC_TOKEN_WARNING_THRESHOLD=80

# ==========================================
# PROJECT SETTINGS
# ==========================================
# Default estimated tokens for new projects
NEXT_PUBLIC_DEFAULT_PROJECT_TOKENS=15000

# Default container port for previews
NEXT_PUBLIC_DEFAULT_CONTAINER_PORT=3000

# Command execution timeout in seconds
NEXT_PUBLIC_COMMAND_TIMEOUT=300

# ==========================================
# AI CONTEXT SETTINGS
# ==========================================
# Maximum tokens for AI context
NEXT_PUBLIC_MAX_CONTEXT_TOKENS=50000

# ==========================================
# POLLING INTERVALS (in milliseconds)
# ==========================================
# Project status polling interval
NEXT_PUBLIC_PROJECT_STATUS_INTERVAL=3000

# Container check interval
NEXT_PUBLIC_CONTAINER_CHECK_INTERVAL=30000

# ==========================================
# IMAGE CONFIGURATION
# ==========================================
# Allowed image domains (comma-separated)
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,bharatbuild.ai

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_OAUTH=true
NEXT_PUBLIC_ENABLE_CONTAINER_EXECUTION=true
NEXT_PUBLIC_ENABLE_LIVE_PREVIEW=true

# ==========================================
# ANALYTICS (Optional)
# ==========================================
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ==========================================
# NOTES
# ==========================================
# 1. Never commit .env.local with real credentials
# 2. All NEXT_PUBLIC_ variables are exposed to the browser
# 3. For production, ensure all URLs use HTTPS
# 4. The API URL should match your backend deployment
